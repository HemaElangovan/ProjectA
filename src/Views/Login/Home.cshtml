<body class="bg">
    <div class="navbar navbar-inverse">
        <div class="container">
            <a href="~/Login/AddDoctor">Add Doctor</a>
            <a href="~/Login/AddPatient">Add Patient</a>
            <a href="~/Login/Schedule">Schedule Appointment</a>
            <a href="~/Login/Logout">Logout</a>
        </div>
    </div>
    <br />
    <br />
    <b><center><h3 style="color:darkviolet">APPOINTMENT DETAILS</h3></center></b>
    <table border="2" cellpadding="2" style="border-color: cadetblue; width: 1000px;">
        <thead style="background-color:cadetblue;color:white ;  ">
            <tr>
                <td>Appointment No </td>
                <td>Patient ID</td>
                <td>Specialization</td>
                <td>Doctor Name</td>
                <td>Visiting Date</td>
                <td>Appointment Time</td>
            </tr>
        </thead>
        @foreach (DataRow dr in Model.Rows)
         {
         <tr>
         <td>@dr["Appointment_ID"].ToString()</td>
         <td>@dr["Patient_Id"].ToString()</td>
         <td>@dr["Specialization"].ToString() </td>
         <td>@dr["DoctorName"].ToString()</td>
         <td>@dr["Visit_Date"].ToString()</td>
         <td>@dr["Appointment_Time"].ToString()</td>
         <td>@Html.ActionLink("Cancel Appointment", "Cancel", new { aid = dr["Appointment_ID"].ToString() })</td>
         </tr>            
         }
    </table></center>
